<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a2018obarnett.owen_final.MainActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    <EditText
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:id="@+id/size"
        android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">
            <Button
                android:layout_width="110sp"
                android:layout_height="55sp"
                android:text="Take top picture"
                android:id="@+id/top_button"
                android:layout_marginRight="30sp"
                android:background="@drawable/button"/>
            <Button
                android:layout_width="110sp"
                android:layout_height="55sp"
                android:text="Take side picture"
                android:id="@+id/side_button"
                android:layout_marginLeft="30sp"
                android:background="@drawable/button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="35sp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_view"
        android:layout_marginRight="40sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/side_view"
        android:layout_marginLeft="40sp"/>
    </LinearLayout>
        <Button
            android:layout_width="80sp"
            android:layout_height="50sp"
            android:text="Done"
            android:id="@+id/done"
            android:layout_marginTop="20sp"
            android:background="@drawable/button"
            android:enabled="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="35sp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/warp_left"
                android:layout_marginRight="20sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/warp_right"
                android:layout_marginRight="20sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filter_left"
                android:layout_marginRight="20sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filter_right"
                android:layout_marginRight="20sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/final_value"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
